{
  "title": "PowerNukkitX文档",
  "author": [
    "超神的冰凉"
  ],
  "pages": {
    "path": "../PowerNukkitX",
    "recursion": true,
    "filter": ".*\\.md"
  },
  "defaultVariables": {
    "file.language": "zh-cn"
  },
  "processflow": {
    "processors": [
      {
        "id": "copy-resources",
        "use": "copy-file",
        "args": {
          "copies": {
            "./assets/image": [
              "./html/zh-cn/image",
              "./html/en-us/image"
            ],
            "./template/css": [
              "./html/zh-cn/css",
              "./html/en-us/css"
            ],
            "./template/js": [
              "./html/zh-cn/js",
              "./html/en-us/js"
            ],
            "./assets/image/favicon.ico": "./html/favicon.ico"
          }
        }
      }
    ]
  },
  "workflow": {
    "outputPath": "./html/%file.language%",
    "steps": [
      {
        "id": "render-markdown",
        "use": "markdown",
        "args": {
          "cssClass": {
            "h1": "mdui-text-color-theme",
            "h2": "mdui-text-color-theme",
            "h3": "mdui-text-color-theme",
            "table": "mdui-table mdui-table-hoverable"
          }
        }
      },
      {
        "id": "generate-catalogue",
        "use": "catalogue",
        "args": {
          "cssClass": {
            "p": "category-title mdui-text-color-theme",
            "ol": "category-sub",
            "strong": "mdui-text-color-theme-accent"
          }
        }
      },
      {
        "id": "generate-html",
        "use": "html-format",
        "args": {
          "templatePaths": {
            "zh-cn": "./template/zh-cn.html",
            "en-us": "./template/en-us.html"
          },
          "placeholders": {
            "md": "markdown.rendered",
            "catalogue": "html.catalogue",
            "title": "file.title",
            "relativePrefix": "file.rootRelativePrefix"
          }
        }
      }
    ]
  }
}